  string filename = "bonsoir.ssi";
  link l = "ssi:w " + path + filename;

  write(l, I, "bonjour");
  close(l);

  token output;
  output.fieldnames = list("generators", "GroebnerBasis");
  output.data[1] = degree;
  output.data[2] = edges;
  output.data[3] = genus;
  output.data[4] = s;
  return(output);


}