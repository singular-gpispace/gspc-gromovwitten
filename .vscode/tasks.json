{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "export LD_LIBRARY_PATH=/usr/local/lib:$LD_LIBRARY_PATH && cd ${fileDirname} && g++ -O3 -I /usr/local/include/flint/ ${fileBasename} -o ${fileBasenameNoExtension} -L /usr/local/lib -lflint && ./${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "reveal": "always",
                "echo": true,
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}